# apps/api/.env.example
# Copiar a .env para desarrollo local

# Postgres (DEV) — apunta a la DB "app"
DATABASE_URL="postgresql://app:app@localhost:5432/app?schema=public"

# Shadow DB (DEV) — recomendada para migrate dev / reset (si tu prisma.config la usa)
SHADOW_DATABASE_URL="postgresql://app:app@localhost:5432/app_shadow?schema=public"

# Server
PORT=3000
NODE_ENV=development
TZ=UTC

# Dev auth (si lo usás). Si no, borrarlo.
DEV_AUTH_ENABLED=true

# JWT
JWT_SECRET="change-me-in-production"
JWT_EXPIRES_IN="7d"

# Redis (optional — throttler falls back to in-memory if unavailable)
REDIS_URL="redis://localhost:6379"

# CORS (prod only — comma-separated origins; dev ignores this)
# ALLOWED_ORIGINS="https://app.fuchibol.com"

# Throttle (optional overrides — defaults shown)
# THROTTLE_LOGIN_LIMIT=5
# THROTTLE_LOGIN_TTL=600000
# THROTTLE_MUTATIONS_LIMIT=30
# THROTTLE_MUTATIONS_TTL=60000
# THROTTLE_READS_LIMIT=120
# THROTTLE_READS_TTL=60000

# Idempotency (optional — defaults shown)
# IDEMPOTENCY_TTL_MS=172800000
# IDEMPOTENCY_CLEANUP_INTERVAL_MS=3600000
